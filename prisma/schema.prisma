generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String    @id @default(uuid())
  publicKey          String    @unique
  createdAt          DateTime  @default(now())
  isBalanceFrozen    Boolean   @default(false)
  freeHoursLeft      Float     @default(3)
  freeHoursStartDate DateTime?
  perHoursLeft       Float     @default(0)
}
